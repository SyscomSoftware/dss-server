	<!-- POSTSIGNUM  přihláššení klientským certifikátem
	##################################################################
		https://tsa.postsignum.cz/TSS/HttpTspServer/

	KeyStore tool :
		KeyStore Explorer: https://keystore-explorer.org/
	Alternativně:
		Vytvoření keystore:

		import klíče do keystore:

	    keytool -trustcacerts -keystore "D:\Projects\RAKOSOFT-SSW\dss-server\dss-demo-webapp\src\main\resources\postsignum_keys.p12" -storepass czpost -importcert -alias avis -file "D:\Certificates\Postsignum TSA\AVISME.cer"

	-->

	<bean id="tspSource" class="cz.ssw.dss.SswTspSource">
		<constructor-arg name="tspServer"  value="https://tsa.postsignum.cz/TSS/HttpTspServer/" />
		<constructor-arg name="sslKeystoreType"  value="PKCS12" />
		<constructor-arg name="sslKeystoreResource"  value="postsignum_client.p12" />
		<constructor-arg name="sslKeystorePassword"  value="AVISME" />
		<constructor-arg name="useKeyAsTrustMaterial"  value="false" />
	</bean>

</beans>